<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="top">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="net.ts_matsu.kabusign.viewmodel.ChartDisplayDialogViewModel" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/llChatDisplayTop"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:textColor="@{context.getColor(viewModel.colorDayValue)}"
                android:text="@{viewModel.selectedDate}"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@{context.getColor(viewModel.colorDayValue)}"
                    android:text="@string/label_high_value"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@{context.getColor(viewModel.colorDayValue)}"
                    android:text="@string/label_low_value"/>
            </LinearLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvHighValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@{context.getColor(viewModel.colorDayValue)}"
                    android:text="@{viewModel.highData}"/>

                <TextView
                    android:id="@+id/tvLowValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@{context.getColor(viewModel.colorDayValue)}"
                    android:text="@{viewModel.lowData}"/>
            </LinearLayout>
            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@{context.getColor(viewModel.colorDayValue)}"
                    android:text="@string/label_open_value"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@{context.getColor(viewModel.colorDayValue)}"
                    android:text="@string/label_close_value"/>
            </LinearLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvOpenValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@{context.getColor(viewModel.colorDayValue)}"
                    android:text="@{viewModel.openData}"/>

                <TextView
                    android:id="@+id/tvCloseValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@{context.getColor(viewModel.colorDayValue)}"
                    android:text="@{viewModel.closeData}"/>
            </LinearLayout>
            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@{context.getColor(viewModel.colorDayValue)}"
                        android:text="@string/label_volume"/>
                    <TextView
                        android:id="@+id/tvVolumeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:textSize="12sp"
                        android:textColor="@{context.getColor(viewModel.colorDayValue)}"
                        android:text="@{viewModel.volumeData}"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvBeforeRatio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@{context.getColor(viewModel.colorBeforeRatio)}"
                    android:text="@{viewModel.ratioData}"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/ivLineEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#10000000"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:srcCompat="@drawable/line_ic_list"
                android:onClick="@{() -> viewModel.onClickLineImageButton()}"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#10000000"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:srcCompat="@drawable/ic_baseline_refresh_36"
                android:onClick="@{() -> viewModel.onClickUpdateImageButton()}" />

        </LinearLayout>

        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/combinedChart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llChatDisplayTop"
            app:layout_constraintBottom_toTopOf="@+id/volumeChart"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" >
        </com.github.mikephil.charting.charts.CombinedChart>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/volumeChart"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btChartDisplayEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" >
        </com.github.mikephil.charting.charts.BarChart>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="64dp"
            android:indeterminateTint="@color/colorBlue2"
            android:visibility="@{viewModel.isUpdateProgress ? View.VISIBLE : View.INVISIBLE}"
            />

        <Button
            android:id="@+id/btChartDisplayEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:text="Close"
            android:textColor="@color/colorBlack"
            android:background="#00000000"
            android:textSize="16sp"
            android:onClick="@{() -> viewModel.onNegativeButtonClick()}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

